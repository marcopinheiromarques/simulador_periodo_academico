
@{
    ViewBag.Title = "Materias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/Content/Materias/materias.css" rel="stylesheet" />
}

@section Scripts{
    <script src="~/Scripts/Materias/materias.js"></script>
}

    <div id="conteudo_materias" class="container-fluid" ng-app="appMateria" ng-controller="cadastroMaterias">

        <h2>Matérias</h2>

        <div id="dv_menu_superior_materias" class="row">
            <div id="btn_materias" class="col-md-2">
                <button id="btn_inserir_materia" class="btn btn-primary"
                        data-toggle="modal" data-target="#ModalDadosMateria">
                    Inserir Materia
                </button>
            </div>
            <div class="col-md-10">
                <strong>{{mensagem}}</strong>
            </div>
        </div>

        <div id="dv_tbl_materias" class="row">
            <div class="col-md-12 table-responsive">
                <table id="tbl_materias" class="table table-bordered table-hover table-sm" ng-init="consultar()">
                    <thead class="thead-light">
                        <tr>
                            <th class="cpo_codigo_materia">Código</th>
                            <th class="cpo_nome_materia">Nome</th>
                            <th class="cpo_peso">Peso Prova 1</th>
                            <th class="cpo_peso">Peso Prova 2</th>
                            <th class="cpo_peso">Peso Prova 3</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="m in materias">
                            <td class="cpo_codigo_materia">{{m.IdMateria}}</td>
                            <td class="cpo_nome_materia">{{m.Nome}}</td>
                            <td class="cpo_peso">{{m.PesoProva1}}</td>
                            <td class="cpo_peso">{{m.PesoProva2}}</td>
                            <td class="cpo_peso">{{m.PesoProva3}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        @*Modais*@
        <div class="modal fade" id="ModalDadosMateria" tabindex="-1" role="dialog" aria-labelledby="TituloModalDadosMaterias" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="TituloModalDadosMaterias">Cadastro de Matéria</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <div class="row" id="dv_nome_materia">
                            <div class="col-md-6">
                                <label for="nome_materia">Nome:</label>
                            </div>
                            <div class="col-md-6">
                                <input id="nome_materia" name="nome_materia" type="text" class="form-control" ng-model="model.Nome" />
                            </div>
                        </div>

                        <div class="row" id="dv_peso_prova_1">
                            <div class="col-md-6">
                                <label for="peso_prova_1">Peso Prova 1:</label>
                            </div>
                            <div class="col-md-6">
                                <input id="peso_prova_1" name="peso_prova_1" type="number" class="form-control" min="1" step="0.1"  ng-model="model.PesoProva1" />
                            </div>
                        </div>

                        <div class="row" id="dv_peso_prova_2">
                            <div class="col-md-6">
                                <label for="peso_prova_2">Peso Prova 2:</label>
                            </div>
                            <div class="col-md-6">
                                <input id="peso_prova_2" name="peso_prova_2" type="number" class="form-control" min="1" step="0.1" ng-model="model.PesoProva2" />
                            </div>
                        </div>

                        <div class="row" id="dv_peso_prova_3">
                            <div class="col-md-6">
                                <label for="peso_prova_3">Peso Prova 3:</label>
                            </div>
                            <div class="col-md-6">
                                <input id="peso_prova_3" name="peso_prova_3" type="number" class="form-control" min="1" step="0.1" ng-model="model.PesoProva3" />
                            </div>
                        </div>


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-primary" ng-click="inserir()" data-dismiss="modal">Salvar</button>
                    </div>
                </div>
            </div>
        </div>


    </div>